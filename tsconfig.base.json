{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "strict": true,
    "strictNullChecks": true,
    "paths": {
      "@infrastructure/http-client": [
        "libs/infrastructure/http-client/src/index.ts"
      ],
      "@modules/broker-signup": ["modules/broker-signup/src/index.tsx"],
      "@modules/corretor-emissao": ["modules/corretor-emissao/src/index.tsx"],
      "@modules/fidelize-dashboard": [
        "modules/fidelize-dashboard/src/index.tsx"
      ],
      "@modules/fidelize-mapeamentos-import": [
        "modules/fidelize-mapeamentos-import/src/index.tsx"
      ],
      "@modules/vendors-proposal": ["modules/vendors-proposal/src/index.tsx"],
      "@modules/vendors-authentication": [
        "modules/vendors-authentication/src/index.tsx"
      ],
      "@modules/vendors-policies": ["modules/vendors-policies/src/index.tsx"],
      "@services": ["libs/services/src/index.ts"],
      "@shared/hooks": ["libs/shared/hooks/src/index.tsx"],
      "@shared/ui": ["libs/shared/ui/src/index.tsx"],
      "@shared/utils": ["libs/shared/utils/src/index.ts"]
    }
  },
  "include": ["**/*.d.ts"],
  "exclude": ["tmp"]
}
